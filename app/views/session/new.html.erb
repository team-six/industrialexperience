<!-- Message to the User -->
<% flash.each do |key, value| %>
  <div class="flash session-flash alert alert-<%= key %>"><%= h(value) %></div>
<% end %>

<section id="login" class="row">
<!-- Group Logo -->
<header>
	<%= link_to image_tag("favicon3.png"), root_path, :title => "Dimension Data WFMS" %>
	<p>WFMS Sign In</p>
</header>

<!-- Form for user login -->
<%= form_for(:session, url: session_index_path) do |f| %>

  <ul id="login-fields">   
    <li>
      <span class="adjoined"><i class="fa fa-user"></i></span>
      <%= f.text_field :email, :placeholder => "Email Address" %>
    </li>

    <li>
      <span class="adjoined"><i class="fa fa-unlock"></i></span>
      <%= f.password_field :password, :placeholder => "Password" %> <br />
    </li> 
	
  </ul>

  <p id="remember">
		<%= check_box_tag :remember_me, 1, params[:remember_me] %> 
		<%= label_tag :keep_me_logged_in %>
  </p>  
  
  <%= f.submit "Login" %>
 
<% end %>
<!-- Link to retrieve lost password -->
<p id="forgot-password"><%= link_to 'Forgotten Password', new_password_reset_path %> | 
<%= link_to 'Contact Administrator', contacts_path %> | 
Request Account</p>

</section><!-- /user-login -->